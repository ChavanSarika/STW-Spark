            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="cars.Make"></label>
            </div>
            <div class="col-5">

                <input asp-for="cars.Make" class="form-control" />
                <span asp-validation-for="cars.Make" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="cars.Model"></label>
            </div>
            <div class="col-5">

                <input asp-for="cars.Model" class="form-control" />
                <span asp-validation-for="cars.Model" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="cars.Year"></label>
            </div>
            <div class="col-5">

                <input asp-for="cars.Year" class="form-control" />

            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="cars.Style"></label>
            </div>
            <div class="col-5">

                <input asp-for="cars.Style" class="form-control" />

            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="cars.Miles"></label>
            </div>
            <div class="col-5">

                <input asp-for="cars.Miles" class="form-control" />

            </div>
        </div>

    </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_CreateandBackToList" />
            </div>
        </div>
    </div>
