@model  STW_Spark.Pages.Cars.CreateModel
@{
}
<form method="post">
    <div class="border backgroundwhite">
        <input asp-for="cars.UserId" hidden>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="cars.VIN"></label>
            </div>
            <div class="col-5">

                <input asp-for="cars.VIN" class="form-control" />
