@page
@model  STW_Spark.Pages.ServiceTypes.CreateModel
@{
}
<h2>Create Service Type</h2>
<br />
<br />
<form method="post">
    <div class="border backgroundwhite">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="servicetype.Name"></label>
            </div>
            <div class="col-5">

                <input asp-for="servicetype.Name" class="form-control" />
                <span asp-validation-for="servicetype.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="servicetype.Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="servicetype.Price" class="form-control" />
                <span asp-validation-for="servicetype.Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_CreateandBackToList" />
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
