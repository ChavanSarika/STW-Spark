@page
@model  STW_Spark.Pages.Services.HistoryModel
@{
}
<div class="container backgroundwhite row">
    <div class="col-6">
        <h2 class="text-info py-2"> Service History</h2>
    </div>
    <div class="col-3 offset-3 py-2 text-rigt">
        <a asp-page="../Cars/Index" asp-route-UserId="@Model.UserId" class="btn btn-outline-info btn-sm">Back To User</a>
    </div>
</div>
@if (Model.serviceHeaders.Count == 0)
{


    <div class="container backgroundwhite">
        <p>
            No Service record  found !!...
        </p>
    </div>

}
else
{ <div class="container backgroundwhite">
        <div class="card">
            <div class="card-header text-white  bg-dark ml-0 row container border">
                <div class="col-1">
                    <i class="fa fa-user"></i>
                </div>
                <div class="col-5">
                    <label class="text-info">@Model.serviceHeaders[0].Car.user.Name</label><br />
                    <label class="text-info">@Model.serviceHeaders[0].Car.user.Name</label>
                </div>

                <div class="col-5 text-right">
                    <label class="text-info">@Model.serviceHeaders[0].Car.VIN</label><br />
                    <label class="text-info">@Model.serviceHeaders[0].Car.Model</label>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(m => m.serviceHeaders[0].Miles)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.serviceHeaders[0].TotalPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.serviceHeaders[0].details)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.serviceHeaders[0].DateAdded)
                        </th>

                    </tr>
                    @foreach (var item in Model.serviceHeaders)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Miles)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.TotalPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.details)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.DateAdded)
                    </td>
                    <td>
                        <a class="btn btn-success" asp-page="Details" asp-route-serviceId="@item.Id">Details </a>
                    </td>

                </tr>
                    }
                </table>
            </div>
        </div>
    </div>}

